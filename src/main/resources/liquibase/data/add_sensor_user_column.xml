<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/add_sensor_user_column.xml">

    <changeSet id="4" author="MitkovMaksym">
        <addColumn tableName="sensor">
            <column name="created_by" type="BIGINT"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="sensor"
                                 baseColumnNames="created_by"
                                 referencedTableName="app_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_sensor_created_by_user"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="sensor" constraintName="fk_sensor_created_by_user"/>
            <dropColumn tableName="sensor" columnName="created_by"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
