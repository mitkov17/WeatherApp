<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/add-basic-sensors.xml">

    <changeSet id="3" author="MitkovMaksym">
        <insert tableName="sensor">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="TemperatureSensor1"/>
            <column name="latitude" valueNumeric="50.45"/>
            <column name="longitude" valueNumeric="30.52"/>
            <column name="sensor_type" value="TEMPERATURE"/>
            <column name="date_of_installation" valueDate="2024-01-01"/>
        </insert>

        <insert tableName="sensor">
            <column name="id" valueNumeric="2"/>
            <column name="name" value="HumiditySensor1"/>
            <column name="latitude" valueNumeric="51.45"/>
            <column name="longitude" valueNumeric="31.52"/>
            <column name="sensor_type" value="HUMIDITY"/>
            <column name="date_of_installation" valueDate="2024-02-01"/>
        </insert>

        <insert tableName="sensor">
            <column name="id" valueNumeric="3"/>
            <column name="name" value="PressureSensor1"/>
            <column name="latitude" valueNumeric="52.45"/>
            <column name="longitude" valueNumeric="32.52"/>
            <column name="sensor_type" value="PRESSURE"/>
            <column name="date_of_installation" valueDate="2024-03-01"/>
        </insert>

        <rollback>
            <delete tableName="sensor">
                <where>id IN (1, 2, 3)</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>
